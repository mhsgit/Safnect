<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BlueToothBLEdemo" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->

        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>

        <!--设置顶部状态栏和底部导航栏是否为透明-->
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="GradientButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/welcome_entry_btn</item>
        <!-- 其他样式属性，如边距、字体颜色等 -->
    </style>

    <style name="CommonBlueButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/common_btn_blue_selector</item>
        <item name="android:textColor">@color/white</item>
        <!-- 其他样式属性，如边距、字体颜色等 -->
    </style>

    <style name="CommonWhiteButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/common_btn_white_selector</item>
        <item name="android:textColor">@color/color_ff0b0bd8</item>
        <!-- 其他样式属性，如边距、字体颜色等 -->
    </style>

    <style name="select_storage_type_item">
        <item name="android:background">@drawable/list_item_bg_white_selector</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:minHeight">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="device_list_item">
        <item name="android:background">@drawable/list_item_bg_white_shape</item>
        <item name="android:layout_marginStart">@dimen/marginLeft</item>
        <item name="android:layout_marginEnd">@dimen/marginLeft</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="select_storage_type_item_desc">
        <item name="android:textColor">@color/color_1f2021</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <style name="select_storage_type_item_icon">

    </style>


    <style name="device_list_item_text_1">
        <item name="android:textColor">@color/color_1f2021</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="device_list_item_text_2">
        <item name="android:textColor">@color/color_ff616366</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="device_list_item_text_3">
        <item name="android:textColor">@color/color_1f2021</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewCommonStyle">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextViewLabelStyle" parent="TextViewCommonStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/color_ff616366</item>
    </style>

    <style name="TextViewContentStyle" parent="TextViewCommonStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_ff1f2021</item>
    </style>

</resources>